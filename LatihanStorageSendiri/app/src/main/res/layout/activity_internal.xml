<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InternalActivity">

    <Button
        android:id="@+id/btn_buatfile"
        android:layout_width="348dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="BUAT FILE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ubahfile"
        android:layout_width="348dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:text="UBAH FILE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_buatfile" />

    <Button
        android:id="@+id/btn_bacafile"
        android:layout_width="348dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:text="BACA FILE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ubahfile" />

    <Button
        android:id="@+id/btn_hapusfile"
        android:layout_width="348dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:text="HAPUS FILE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bacafile" />

    <TextView
        android:id="@+id/textBaca"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Hasil Baca File"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_hapusfile" />

</androidx.constraintlayout.widget.ConstraintLayout>